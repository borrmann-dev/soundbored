# Soundbored Secrets Configuration
# Copy this file to secrets.yaml and fill in your values:
#   cp secrets.yaml.example secrets.yaml
#
# Then install/upgrade with:
#   ./install.sh -f secrets.yaml
#   ./upgrade.sh -f secrets.yaml
#
# IMPORTANT: Never commit secrets.yaml to git!

secrets:
  # Discord bot token (from Discord Developer Portal > Bot > Token)
  DISCORD_TOKEN: "your-bot-token-here"

  # Discord OAuth credentials (from Discord Developer Portal > OAuth2)
  DISCORD_CLIENT_ID: "your-client-id"
  DISCORD_CLIENT_SECRET: "your-client-secret"

  # Phoenix secret key base - generate with: openssl rand -base64 48
  SECRET_KEY_BASE: "generate-with-openssl-rand-base64-48"

  # Optional: Basic auth credentials (leave empty to disable)
  # BASIC_AUTH_USERNAME: "admin"
  # BASIC_AUTH_PASSWORD: "secure-password"

